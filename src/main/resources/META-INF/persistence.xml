<?xml version = "1.0" encoding = "utf-8"?>
<persistence version="2.0" 
	xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    
    <persistence-unit name="reimbursements" transaction-type="RESOURCE_LOCAL">
    	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    	<class>com.revature.reimbursements.entity.User</class>
    	<class>com.revature.reimbursements.entity.Employee</class>
    	
    	<properties>
    		<property 
    			name="javax.persistence.jdbc.driver"
    			value="org.postgresql.Driver" />
    		<property 
    			name="javax.persistence.jdbc.url"
    			value="jdbc:postgresql://revature.cb9kjuhkayd5.us-east-2.rds.amazonaws.com:5432/postgres" />
    		<property 
    			name="javax.persistence.jdbc.user"
    			value="postgres" />
    		<property 
    			name="javax.persistence.jdbc.password"
    			value="postgres" />
    		<property 
    			name="hibernate.dialect" 
    			value="org.hibernate.dialect.PostgreSQL10Dialect"/>
    		<property 
    			name="hibernate.id.new_generator_mappings" 
    			value="true"/>
    			
    		
    	</properties>
    </persistence-unit>
   
</persistence>